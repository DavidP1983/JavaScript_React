{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "no-useless-constructor": "error",
        "max-classes-per-file": "off", 
        "one-var": ["error", "never"],
        "object-curly-spacing": ["error", "never", { "objectsInObjects": false }],
        // "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],
        "eqeqeq": ["error", "smart"],
        "indent":["error", 2],
        "arrow-spacing":"error",
        // "quotes":["error", "double"],
        "semi":["error", "always"],
        "no-console": "off",
        "func-names":"off",
        "object-shorthand":"off",
        "class-methods-use-this":"off",
        "no-unused-vars": ["error", { "caughtErrorsIgnorePattern": "^ignore" }],
    	"react/jsx-uses-react": 1,
        "react/jsx-uses-vars": "error",

        "linebreak-style": [
            "error",
            "windows"
        ],
        "babel/new-cap": 1,
        "babel/camelcase": 1,
        "babel/no-invalid-this": 1,
        "babel/object-curly-spacing": 1,
        "babel/semi": 1,
        "babel/no-unused-expressions": 1,
        "babel/valid-typeof": 1

    },
    "settings": {
        "react": {
            "version": "latest"
        }
      }
}
